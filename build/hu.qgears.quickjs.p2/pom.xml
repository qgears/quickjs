<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>hu.qgears</groupId>
		<artifactId>quickjs-parent</artifactId>
		<version>3.0.0-SNAPSHOT</version>
		<relativePath>../quickjs-parent</relativePath>
	</parent>
	<groupId>hu.qgears</groupId>
	<artifactId>hu.qgears.quickjs.p2</artifactId>
	<version>3.0.0-SNAPSHOT</version>
	<packaging>eclipse-repository</packaging>

	<properties>
		<p2subFolder>quickjs</p2subFolder>
		<p2Label>"QuickJS P2 repository"</p2Label>
	</properties>

	<profiles>
		<profile>
			<id>release</id>
			<activation>
				<property>
					<!-- Publishing release into this P2 repository. This profile is activated 
						when the target folder is specified. -->
					<name>target-composite-repository</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho.extras</groupId>
						<artifactId>tycho-eclipserun-plugin</artifactId>
						<version>${tycho-version}</version>
						<executions>
							<execution>
								<id>add-p2-composite-repository</id>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
