<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>hu.qgears</groupId>
		<artifactId>root-plain</artifactId>
		<version>1.0.0</version>
		<relativePath>../../../repository-builder/parent-poms/root-plain</relativePath>
	</parent>

	<artifactId>quickjs-parent</artifactId>
	<version>3.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<opensource-utils-version>[12.0.0,)</opensource-utils-version>
		<jetty-version>11.0.11</jetty-version>
		<junit-version>4.8.2</junit-version>
	</properties>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<resources>
			<resource>
				<directory>src</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>
	</build>

	<profiles>
		<!-- This profile is activated when the version bump script is executed.
			It adds each the aggregator pom of the component (../../) as a child module 
			of this component, so the tycho-version-plugin will be able to detect
		parent-child 
			relationships propertly, so also changes the version string in the parent pom
		reference.
		-->
		<profile>
			<id>versionbump</id>
			<activation>
				<property>
					<name>newVersion</name>
				</property>
			</activation>
			<modules>
				<module>../../</module>
			</modules>
		</profile>
	</profiles>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>hu.qgears</groupId>
				<artifactId>hu.qgears.commons</artifactId>
				<version>${opensource-utils-version}</version>
			</dependency>
			<dependency>
				<groupId>hu.qgears</groupId>
				<artifactId>hu.qgears.tools</artifactId>
				<version>${opensource-utils-version}</version>
			</dependency>
			<dependency>
				<groupId>hu.qgears</groupId>
				<artifactId>joptsimple</artifactId>
				<version>[2.0.0,)</version>
			</dependency>
			<dependency>
				<groupId>hu.qgears</groupId>
				<artifactId>hu.qgears.rtemplate.runtime</artifactId>
				<version>[2.0.0-SNAPSHOT,)</version>
			</dependency>
			
			
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-api</artifactId>
				<version>1.7.36</version>
			</dependency>
			<dependency>
				<groupId>org.json</groupId>
				<artifactId>json</artifactId>
				<version>20250517</version>
			</dependency>
			
			<dependency>
				<groupId>org.teavm</groupId>
				<artifactId>teavm-jso-apis</artifactId>
				<version>0.12.1</version>
			</dependency>
			
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>${junit-version}</version>
				<scope>test</scope>
			</dependency>
		</dependencies>


	</dependencyManagement>
</project>
